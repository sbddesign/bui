{
  "$schema": "https://design-tokens.github.io/community-group/format/design-tokens.json",
  "$version": "1.0.0",
  "name": "BUI Design Tokens",
  "description": "Design tokens based on Tailwind CSS theme variables",
  "tokens": {
    "primitives": {
      "tailwind": {
        "color": {
          "white": {
              "$value": "#ffffff",
              "$type": "color"
          },
          "black": {
              "$value": "#000000",
              "$type": "color"
          },
          "orange": {
              "$value": "#F89B2A",
              "$type": "color"
          },
          "neutral": {
            "2": {
                "$value": "#2D2D2D",
                "$type": "color"
            },
            "4": {
                "$value": "#5C5C5C",
                "$type": "color"
            },
            "5": {
                "$value": "#787878",
                "$type": "color"
            },
            "7": {
                "$value": "#B0B0B0",
                "$type": "color"
            }
          }
        }
      }
    }
  }
}